# Grocito - Environment Variables Template
# Copy this file to .env and update values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Local Development (Docker MySQL)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=grocito_db
MYSQL_USER=grocito_user
MYSQL_PASSWORD=grocito_pass

# Production (TiDB Cloud) - Set these in Render dashboard
# SPRING_DATASOURCE_URL=jdbc:mysql://gateway01.region.prod.aws.tidbcloud.com:4000/grocito_db?sslMode=VERIFY_IDENTITY
# SPRING_DATASOURCE_USERNAME=your_tidb_username
# SPRING_DATASOURCE_PASSWORD=your_tidb_password

# ===========================================
# BACKEND CONFIGURATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars

# Email Configuration (Optional)
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# API URL (Local)
REACT_APP_API_URL=http://localhost:8080

# Weather API (for location features)
REACT_APP_WEATHER_API_KEY=your_openweathermap_api_key

# Razorpay (Payment Gateway)
REACT_APP_RAZORPAY_KEY_ID=your_razorpay_key_id

# ===========================================
# PRODUCTION URLS (Update after deployment)
# ===========================================
# REACT_APP_API_URL=https://grocito-api.onrender.com
